@model List<ApplicationUser>

@using etherapist.Utility

<div class="col bg-grey mt-5" style="padding:4rem 5rem 5rem 8rem;margin-left:25%;height:100vh">
    <div>
        <!-- Title -->
        <div class="d-flex mb-3">
            <div class="link">THERAPISTS</div>
        </div>
        <!-- Sessions -->
        <div>
            @if (Model.Count != 0) {
                <div>
                    @foreach(ApplicationUser therapist in Model) {
                        <button class="c-listbar mb-3">
                            <div class="c-listbar-left">
                                <img class="c-listbar-progress" src="../images/dp-usman_yousaf.png" />
                                <div class="c-listbar-label">
                                    <div class="c-listbar-topic">@therapist.FirstName @therapist.LastName</div>
                                    <div class="c-listbar-sub">Active</div>
                                </div>
                            </div>
                            <div class="c-listbar-right">
                                <div class="c-listbar-id">Sessions completed: 23</div>
                                <div class="c-listbar-time">21/03/2021 16:10PM</div>
                            </div>
                        </button>
                    }
                </div>
            }
            else {
                <div style="min-height:50vh;width:100%;color:#707070" class="d-flex align-items-center justify-content-center">
                    When a therapist is added, they'll be shown here
                </div>
            }
        </div>
    </div>
</div>

</div>